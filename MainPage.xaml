<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassManager.MainPage"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20" 
            Spacing="20">

            <Image
                Source="D:\Key.webp" 
                HeightRequest="150"
                Aspect="AspectFit"
                SemanticProperties.Description="KeyPassZF logo"
                Margin="0,40,0,0"
                Opacity="0.9" />

                <Label
                Text="KeyPassZF"
                FontSize="34" 
                    FontAttributes="Bold"
                TextColor="#2C3E50"
                    HorizontalOptions="Center"
                Margin="0,20,0,0"
                SemanticProperties.HeadingLevel="Level1" />

                    <Label
                Text="Securely Manage Your Passwords"
                FontSize="18"
                FontAttributes="Italic"
                TextColor="#7F8C8D" 
                        HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to KeyPassZF" />

                        <Button
                x:Name="CounterBtn"
                Text="Enter Password Database"
                FontSize="16"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="#3498DB" 
                            CornerRadius="10"
                            WidthRequest="300"
                            HeightRequest="50"
                Margin="0,30,0,0"
                SemanticProperties.Hint="Access your password database"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

                            <Button
                x:Name="Fart"
                Text="Create Account"
                FontSize="16"
                FontAttributes="Bold"
                TextColor="#3498DB" 
                                BackgroundColor="Transparent"
                                BorderColor="#3498DB"
                BorderWidth="2"
                CornerRadius="10"
                WidthRequest="300"
                HeightRequest="50"
                Margin="0,15,0,0"
                Clicked="Fart_Clicked"
                HorizontalOptions="Center" />

                                <Label
                Text="Your security, our priority."
                FontSize="12"
                TextColor="#95A5A6" 
                                    HorizontalOptions="Center"
                Margin="0,40,0,20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>