<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassManager.ViewAndAddPasswords"
             Title="Passwords"
             BackgroundColor="#F5F7FA">
    

    <ScrollView>
        <VerticalStackLayout Padding="30,20" Spacing="20">
            <Label Text="Access Granted"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center"
                   Margin="0,30,0,0" />

            <Label Text="Manage your passwords below"
                   FontSize="16"
                   TextColor="#7F8C8D"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <Label Text="View Passwords"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#3498DB"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0" />

            <ImageButton Source="D:\images.png"
                         HeightRequest="150"
                         WidthRequest="150"
                         Margin="0,10,0,0"
                         Clicked="ViewPasswords"
                         BackgroundColor="Transparent"
                         CornerRadius="10"
                         Padding="10" />

            <Label Text="Add Passwords"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#3498DB"
                   HorizontalOptions="Center"
                   Margin="0,30,0,0" />

            <ImageButton Source="https://cdn.vectorstock.com/i/500p/93/58/plus-icon-vector-55359358.jpg"
                         WidthRequest="150"
                         HeightRequest="150"
                         Margin="0,10,0,0"
                         Clicked="AddPasswords"
                         BackgroundColor="Transparent"
                         CornerRadius="10"
                         Padding="10" />

            <Label Text="Your passwords, your control."
                   FontSize="12"
                   TextColor="#95A5A6"
                   HorizontalOptions="Center"
                   Margin="0,40,0,20" />
          
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>