<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassManager.AddPass"
             Title="AddPass">
    <VerticalStackLayout>
        <Label 
            Text="Enter A Password to be Stored"
            FontSize="24"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="0,60,0,0"/>
        
        <Entry x:Name="DomainOrWebsite"
         Placeholder="Enter Domain or Website"
         PlaceholderColor="#95A5A6"
         FontSize="16"
         WidthRequest="300"
         HeightRequest="50"
         HorizontalOptions="Center"
         BackgroundColor="White"
         Margin="0,40,0,0" />

        <Entry x:Name="Password"
              Placeholder="Password"
              PlaceholderColor="#95A5A6"
              FontSize="16"
              WidthRequest="300"
              HeightRequest="50"
              HorizontalOptions="Center"
              BackgroundColor="White"
              Margin="0,20,0,0" />



        <Button x:Name="Submit"
                    Text="Save Password!"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="#3498DB"
                    CornerRadius="10"
                    WidthRequest="300"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Margin="0,30,0,20"
                    Clicked="Submit2" />


    </VerticalStackLayout>
</ContentPage>